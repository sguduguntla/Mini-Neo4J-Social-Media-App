<div class="container">
  <a class="btn white black-text waves-effect" id="clearResults">CLEAR</a>
  <table class="highlight">
    <thead>
      <tr>
        <th data-field="numUser">#</th>
        <th data-field="id">Name</th>
        <th data-field="name">Username</th>
        <th data-field="price">Email</th>
        <th data-field="price">Add Friend?</th>
        <th data-field="price">Delete?</th>
        <th data-field="price">Update?</th>
      </tr>
    </thead>

    <tbody>
      <% users.forEach(function(user, index) { %>
        <tr>
          <td>
            <%= index + 1 %>
          </td>
          <td>
            <%= user.fname %>
              <%= user.lname %>
          </td>
          <td>@
            <%=user.username %>
          </td>
          <td>
            <%= user.email %>
          </td>
          <td>
            <input href="#" type="submit" value="Add Friend" class="addFriend btn white black-text waves-effect" />
          </td>
          <td>
            <input href="#" type="submit" value="Delete" class="deleteUser btn white black-text waves-effect" />
          </td>
          <td>
            <input data-target="updateModal" type="submit" value="Update" class="updateModalTrigger modal-trigger btn white black-text waves-effect" />
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>

  <!-- Modal Structure -->
  <div id="updateModal" class="modal modal-fixed-footer">
    <div class="modal-content">
      <h4>Update User</h4>
       <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <i class="material-icons prefix">account_circle</i>
              <input id="new_first_name" type="text" class="validate">
              <label class="active" for="first_name">First Name</label>
            </div>
            <div class="input-field col s6">
              <i class="material-icons prefix">account_circle</i>
              <input id="new_last_name" type="text" class="validate">
              <label class="active" for="last_name">Last Name</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">email</i>
              <input id="new_email" type="email" class="validate">
              <label class="active" for="email">Email</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">perm_identity</i>
              <input id="new_username" type="text" class="validate">
              <label class="active" for="username">Username</label>
            </div>
          </div>
        </form>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Cancel</a>
    <a id="updateUser" class="modal-action modal-close waves-effect waves-green btn-flat ">Update</a>
  </div>
</div>
<script src="js/addFriends.js"></script>
</div>
